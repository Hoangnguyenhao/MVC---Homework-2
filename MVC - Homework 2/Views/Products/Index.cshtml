@model IReadOnlyList<MvcShop.Models.Product>
@{
    ViewData["Title"] = "Products";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container py-4">
    <h1 class="mb-4">Products</h1>
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col" class="text-end">Price (VND)</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var p = Model[i];
                    <tr>
                        <th scope="row">@(i + 1)</th>
                        <td>
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@p.Id" class="link-primary text-decoration-none">
                                @p.Name
                            </a>
                        </td>
                        <td class="text-end">@p.Price.ToString("N0")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
